@model Usuario

<div class="container">
	<h1>Registro de Usuario</h1>
	<form asp-action="Cadastrar" asp-controller="Home", method="post">
		<div class="mt-3">
			<label class="form-label">Nome:</label>
			<input type="text" class="form-control" asp-for="Nome"/>
		</div>
		<div class="mt-3">
			<label class="form-label">Email:</label>
			<input type="text" class="form-control" asp-for="Email"/>
		</div>
		<div class="mt-3">
			<label class="form-label">Cargo:</label>
			<input type="text" class="form-control" asp-for="Cargo"/>
		</div>

		<div class="d-flex mt-5 g-2">
			<button type="submit" class="btn btn-success w-50 mx-2"> Cadastrar</button>
			<a asp-action="Index" class="btn btn-danger w-50 mx-2">Cancelar</a>
		</div>
	</form>
</div>
